#include <iostream>  
using namespace std;  
int main () { 
       int Scores;
       cout<<"Enter a number to check grade:";    
       cin>>Scores;  
   
            if (Scores >= 70) {    
                cout<<"A";    
            } 
            else if(Scores >= 60 && Scores < 70) {    
                cout<<"B";    
            } 
            else if (Scores < 60 && Scores >= 50) {    
                cout<<"C";    
            }
            // Else display fail
            else {
                cout << "Fail";
            }  
    } 
